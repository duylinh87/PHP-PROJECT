<?php get_header(); ?>

<div id="content">

	<div class="wrap">
		<?php bzb_breadcrumb(); ?>

		<div id="main" <?php bzb_layout_main(); ?>>

			<div class="entry-form-inner">
				<h1 class="post-title"><?php the_title();?></h1>

				<div class="box01">

					<?php
						$xkld_name = $_GET['xkld_name'];
						$job_id = $_GET['post_id'];
					?>

					<p class="txt01"><?php echo get_post( $job_id )->post_title; ?></p>
					
					<div class="list-dl">
						<dl class="clearfix">
							<dt>Công ty XKLĐ</dt>
							<dd><?php echo $xkld_name; ?></dd>
						</dl>
						<dl class="clearfix">
							<dt>Nghành nghề: </dt>
							<dd>
								<?php
								$terms = get_the_terms( $job_id, 'recruit_cat' );
								if ( $terms ) {
									foreach($terms as $term){
										echo '<span>' . $term->name . '</span>';
									}
								}
								?>	
							</dd>
						</dl>
						<dl class="clearfix">
							<dt>Địa điểm: </dt>
							<dd><?php the_field('勤務地',$job_id); ?></dd>
						</dl>
					</div>

				</div>

				<div class="box02">
					<?php if( have_posts() ): while( have_posts() ): the_post(); ?>
					<?php the_content(); ?>
					<?php endwhile; endif; ?>
				</div>
			</div>

		</div><!-- /main -->

	</div><!-- /wrap -->

</div><!-- /content -->

<?php get_footer(); ?>
