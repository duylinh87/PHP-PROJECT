<?php get_header(); ?>

<div id="content">

<div class="wrap">
    <?php bzb_breadcrumb(); ?>

<?php

// 求人検索結果
$post_type = $_GET['post_type'];
if ( $post_type == 'vieclam') {
    $s = $_GET['s'];
    $recruit_cat = $_GET['recruit_cat'];
    $recruit_tokuteigino_cat = $_GET['recruit_tokuteigino_cat'];
    $visa = $_GET['visa'];
    $pref_name = $_GET['pref_name'];
    $salary = $_GET['salary'];
    $salary_high = $salary + 5000000;
    ?>
    <div class="search-wrap">
        <p class="sp search-change search-close">Kết quả tìm kiếm</p>
        <?php get_template_part( 'template-parts/vieclam', 'form' ); ?>
    </div>
    <?php
    //tax_query用
    if($recruit_cat){
        $taxquerysp[] = array(
            'taxonomy'=>'recruit_cat',
            'terms'=> $recruit_cat,
            'include_children'=>false,
            'field'=>'slug',
            'operator'=>'AND'
        );
    }

    if($recruit_tokuteigino_cat){
        $taxquerysp[] = array(
            'taxonomy'=>'recruit_tokuteigino_cat',
            'terms'=> $recruit_tokuteigino_cat,
            'include_children'=>false,
            'field'=>'slug',
            'operator'=>'AND'
        );
    }

    if($visa){
        $taxquerysp[] = array(
            'taxonomy'=>'visa',
            'terms'=> $visa,
            'include_children'=>false,
            'field'=>'slug',
            'operator'=>'AND'
        );
    }

    if($pref_name) {
        $metaquerysp[] = array(
            'key'=>'勤務地',
            'value'=> $pref_name,
            'compare'=>'LIKE',
        );
    }

    if($salary){
        $metaquerysp[] = array(
            'key'=>'月給',
            'value'=>array( $salary, $salary_high ),
            'compare'=>'BETWEEN',
            'type' => 'UNSIGNED'
        );
    }

    $date = date('Y/m/d');
    $metaquerysp[] = array(
            'key'=>'募集期限',
            'value'=> $date,
            'compare' => '>=',
            'type' => 'DATE'
        );
    ?>

    <!-- 検索条件を表示 -->
    <div class="parameter">
        <div class="parameter-inner clearfix">
            <?php if($s){ ?><p class="p1">Tìm kiếm：<?php echo $s; ?><br></p><?php } ?>
            <?php if($recruit_cat){ ?><p class="p2">Nghành nghề：<?php echo get_term_by('slug',$recruit_cat,"recruit_cat")->name; ?></p><?php } ?>
            <?php if($recruit_tokuteigino_cat){ ?><p class="p2">Nghành nghề：<?php echo get_term_by('slug',$recruit_tokuteigino_cat,"recruit_tokuteigino_cat")->name; ?></p><?php } ?>
            <?php if($visa){ ?><p class="p2">Visa kỹ năng：<?php echo get_term_by('slug',$visa,"visa")->name; ?></p><?php } ?>
            <?php if($pref_name){ ?><p class="p3">Địa điểm：<?php echo $pref_name; ?><br></p><?php } ?>
            <?php 
            $field_key = "field_5f0809a259c30";
            $field = get_field_object($field_key);
            $label = $field['choices'][ $salary ];
            ?>
            <?php if($salary){ ?><p class="p4">Mức lương：<?php echo esc_html($label); ?></p><?php } ?>
        </div>

        <?php
        $paged = get_query_var('paged') ? get_query_var('paged') : 1;
        $posts_per_page = 10;
        $args = array(
            'post_type' => $post_type,
            'tax_query' => $taxquerysp,
            'meta_query' => $metaquerysp,
            's' => $s,
            "paged" => $paged,
            'posts_per_page' => $posts_per_page,
        );
        $wp_query = new WP_Query( $args );
        ?>

        <?php
        //件数表示
        $all_num = $wp_query->found_posts; //検索ヒット数
        $current_page = get_query_var('paged'); //現在何ページ目か
        $current_last = $posts_per_page * $current_page; //現在のページの最後
        $current_first = $current_last - $posts_per_page + 1; //現在のページの最初
        if( $all_num < $current_last ){ //最終ページ用の調整
            $exceed_num = $current_last - $all_num;
            $current_last = $current_last - $exceed_num;
        }
        ?>
        <div class="parameter-inner-2 clearfix">
            <?php if( $all_num == 0 ){ ?>
            <p class="result-num">Không tìm thấy công việc phù hợp với tiêu chí của bạn.</p>
            <?php }else{ ?>
            <p class="result-num"><span><?php echo $all_num; ?></span>Hiển thị kết quả từ <?php echo $current_first; ?> 〜 <?php echo $current_last; ?></p>
            <?php } ?>

            <!-- ソート -->
            <?php get_template_part( 'template-parts/vieclam', 'sort' ); ?>
        </div>
    </div>

    <?php if ( $wp_query->have_posts() ) : while ( $wp_query->have_posts() ) : $wp_query->the_post(); ?>

        <?php get_template_part( 'template-parts/vieclam', 'loop' ); ?>

    <?php endwhile; else : ?>

    <?php endif;
    if(function_exists('wp_pagenavi')):
       wp_pagenavi(array('query'=>$wp_query)); 
    endif;
    wp_reset_postdata();

    }

?>

<?php 

// 送り出し機関検索結果
$post_type = $_GET['post_type'];
if ( $post_type == 'xkld') {


    $s = $_GET['s'];
    $area_tag = $_GET['area_tag'];
    $ranking = $_GET['ranking'];
    ?>

    <div class="search-wrap">
        <p class="sp search-change search-close">Kết quả tìm kiếm</p>
        <?php get_template_part( 'template-parts/xkld', 'form' ); ?>
    </div>
    
    <?php
    //tax_query用
    if($area_tag){
        $taxquerysp[] = array(
            'taxonomy'=>'area_tag',
            'terms'=> $area_tag,
            'include_children'=>false,
            'field'=>'slug',
            'operator'=>'AND'
        );
    }

    if($ranking){
        $metaquerysp[] = array(
            'key'=>'ランキング',
            'value'=> $ranking,
            'compare'=>'LIKE',
        );
    }
    
    ?>

    <div class="parameter parameter-xkld">
        <div class="parameter-inner clearfix">
            <?php if($s){ ?><p class="p1">Từ khóa：<?php echo $s; ?></p><?php } ?>
            <?php if($area_tag){ ?><p class="p2">Địa điểm：<?php echo get_term_by('slug',$area_tag,"area_tag")->name; ?></p><?php } ?>
            <?php if($ranking){ ?><p class="p3">Xếp hạng：<?php echo $ranking; ?><br><?php } ?></p>
        </div>

    <?php
    $paged = get_query_var('paged') ? get_query_var('paged') : 1;
    $posts_per_page = 10;
    $args = array(
        'post_type' => $post_type,
        'tax_query' => $taxquerysp,
        'meta_query' => $metaquerysp,
        's' => $s,
        'paged' => $paged,
        'posts_per_page' => $posts_per_page,
    );
    $wp_query = new WP_Query( $args );
    ?>

     <?php
        //件数表示
        $all_num = $wp_query->found_posts; //検索ヒット数
        $current_page = get_query_var('paged'); //現在何ページ目か
        $current_last = $posts_per_page * $current_page; //現在のページの最後
        $current_first = $current_last - $posts_per_page + 1; //現在のページの最初
        if( $all_num < $current_last ){ //最終ページ用の調整
            $exceed_num = $current_last - $all_num;
            $current_last = $current_last - $exceed_num;
        }
        ?>
        <div class="parameter-inner-2 clearfix">
            <?php if( $all_num == 0 ){ ?>
            <p class="result-num">Không tìm thấy công ty XKLĐ nào phù hợp với tiêu chí của bạn.</p>
            <?php }else{ ?>
            <p class="result-num"><span><?php echo $all_num; ?></span>Hiển thị kết quả từ <?php echo $current_first; ?> 〜 <?php echo $current_last; ?></p>
            <?php } ?> 
        </div>
    </div>
    
    <?php if ( $wp_query->have_posts() ) : while ( $wp_query->have_posts() ) : $wp_query->the_post(); ?>
    
    <?php get_template_part( 'template-parts/xkld', 'loop' ); ?>

    <?php endwhile; else : ?>

    <?php endif;
    get_template_part('template-parts/block', 'concierge');
    if(function_exists('wp_pagenavi')):
        wp_pagenavi(array('query'=>$wp_query)); 
    endif;
    wp_reset_postdata();

    }

?>

</div>
</div>

<?php get_footer(); ?>






