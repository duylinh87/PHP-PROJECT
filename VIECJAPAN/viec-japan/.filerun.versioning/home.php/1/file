<?php get_header(); ?>

<div id="content">

	<div class="wrap">
		<div id="main" <?php bzb_layout_main(); ?> role="main" itemprop="mainContentOfPage" itemscope="itemscope" itemtype="http://schema.org/Blog">

			<?php echo sougou_slider_home();?>
			<div class="search-home-tab">
				<div class="tab">
					<button class="tablinks active" onclick="openTab(event, 'vieclam')">Tìm kiếm đơn hàng</button>
					<button class="tablinks" onclick="openTab(event, 'xkld')">Tìm kiếm công ty XKLĐ</button>
				</div>                
				<div id="vieclam" class="tabcontent active">
					<?php get_template_part( 'template-parts/vieclam', 'form' ); ?>
				</div>
				<div id="xkld" class="tabcontent">
					<?php get_template_part( 'template-parts/xkld', 'form' ); ?>
				</div>
			</div> 

			
				<?php if( have_posts() ): 
					echo '<div class="section new-post">';
					echo '<ul>';

					query_posts('posts_per_page=3');
					while( have_posts() ): the_post();
						?>
						<li>
							<a href="<?php the_permalink(); ?>">
								<time datetime="<?php the_time( 'Y-m-d' );?>"><?php the_time( 'd.m.Y' ); ?></time>
								<?php if( time() - get_the_time('G') < 259200 ): ?>     
								<span class="new">
									<?php else: ?>
										<span>
										<?php endif; ?>
										<?php the_title(); ?>
									</span>
								</a>
							</li>
							<?php
						endwhile;
						echo '</ul>';
						echo '<p class="link"><a href="/post-list">Xem tất cả</a></p>';
						echo '</div>';
				endif; ?>
					

				<div class="section job">
					<div class="wrap">
						<p class="section-title"><span>Đơn hàng mới</span></p>
						<ul class="slick-2 content-loop">
							<?php
							$date = date('Y/m/d');
							$metaquerysp[] = array(
								'key'=>'募集期限',
								'value'=> $date,
								'compare' => '>=',
								'type' => 'DATE'
							);
							$args = array(
								'post_type' => 'vieclam',
								'meta_query' => $metaquerysp,
								'posts_per_page' => 9,
								'orderby' => 'date'
							);

							$loop = new WP_Query( $args );
							if( $loop -> have_posts() ): while( $loop -> have_posts() ): $loop -> the_post();
								$thumbnailjob = get_the_post_thumbnail( get_the_ID(), $size = 'top_new_job');
								?>
								<li class="job-box">
									<a class="clearfix" href="<?php the_permalink(); ?>">
										
											<?php if( time() - get_the_time('G') < 259200 ): ?>   
											<span class="new-mark">new</span>   
											<?php endif; ?>
											<div class="images">
												<?php echo $thumbnailjob; ?>
											</div>
											<?php if (has_post_thumbnail()) : ?>
											<div class="content">
											<?php else: ?>
											<div class="content content-noimage">
											<?php endif; ?>

												<?php if( time() - get_the_time('G') < 259200 ): ?>   
												<h2 class="title-new">
												<?php else: ?>
												<h2>
												<?php endif; ?>
												<?php 
												if(mb_strlen($post->post_title)>50) {
													$title= mb_substr($post->post_title,0,50) ;
													echo $title . ' ...';
												} else {
													echo $post->post_title;
												}
												?>
												</h2>
													<?php 
													$field = get_field_object( '月給' );
													$value = $field['value'];
													$label = $field['choices'][ $value ];
													?>
													<p class="salary"><?php echo esc_html($label); ?></p>
													<p class="local font-awesome"><?php the_field('勤務地'); ?></p>
													<?php
													$terms = get_the_terms( $post->ID, 'recruit_cat' );
													if($terms){
														echo '<ul class="occupation font-awesome">';
														foreach($terms as $term){
															echo '<li>' . $term->name . '</li>';
														}
														echo '</ul>';
													}
													
													?>
												
											</div>
										
									</a>
								</li>
							<?php endwhile; endif; wp_reset_postdata(); ?>
						</ul>
						<p class="button button-blue"><a href="<?php echo get_post_type_archive_link( 'vieclam' ); ?>"><span>Xem thêm</span></a></p>
					</div>
					
				</div>

				<div class="section category">
					<div class="wrap">
						<p class="section-title"><span>Tìm kiếm công việc theo sở thích</span></p>
						
						<?php
						$taxonomy_name = 'job_cat';
						$taxonomys = get_terms($taxonomy_name);

						$cat_count = 0;
						if(count($taxonomys)):
							echo '<ul class="content-loop">';
							foreach($taxonomys as $taxonomy):

								if($cat_count >= 6){
									break;
								}
								
								echo '<li class="job-cat-posts">';
								echo '<p class="cat-title">' . $taxonomy->name . '</p>';

								$date = date('Y/m/d');
								$metaquerysp[] = array(
									'key'=>'募集期限',
									'value'=> $date,
									'compare' => '>=',
									'type' => 'DATE'
								);
								$args = array(
									'post_type' => 'vieclam',
									$taxonomy_name => $taxonomy->slug,
									'meta_query' => $metaquerysp,
									'posts_per_page' => 3,
									'orderby' => 'date'
								);

								//print_r($args);
								$loop = new WP_Query( $args );

								if( $loop -> have_posts() ): while( $loop -> have_posts() ): $loop -> the_post();
									$thumbnailjob = get_the_post_thumbnail( get_the_ID(), $size = 'top-new-job');
									?>
									<div class="bottom clearfix">
										<a href="<?php the_permalink(); ?>">
											<?php if( time() - get_the_time('G') < 604800 ): ?>
											<span class="new-mark">new</span>
											<?php endif; ?>
											<div class="images">
												<?php echo $thumbnailjob; ?>
											</div>
											<?php if (has_post_thumbnail()) : ?>
											<div class="content">
											<?php else: ?>
											<div class="content content-noimage">
											<?php endif; ?>
												<?php if( time() - get_the_time('G') < 604800 ): ?>
												<h2 class="title-new">
												<?php else: ?>
												<h2>
												<?php endif; ?>
													<?php 
													if(mb_strlen($post->post_title)>50) {
														$title= mb_substr($post->post_title,0,50) ;
														echo $title . ' ...';
													} else {
														echo $post->post_title;
													}
													?>
												</h2>
												<?php 
												$field = get_field_object( '月給' );
												$value = $field['value'];
												$label = $field['choices'][ $value ];
												?>
												<p class="salary"><?php echo esc_html($label); ?></p>
												<p class="local font-awesome"><?php the_field('勤務地'); ?></p>
												
												<?php
												$terms = get_the_terms( $post->ID, 'recruit_cat' );
												if($terms){
													echo '<ul class="occupation font-awesome">';
													foreach($terms as $term){
														echo '<li>' . $term->name . '</li>';
													}
													echo '</ul>';
												}
												?>
											</div>
										</a>
									</div>
									<?php
								endwhile; endif; wp_reset_postdata();

								echo '<p class="button"><a href="'.get_term_link($taxonomy).'"><span>Xem thêm</span></a></p></';
								echo '</li>';
								$cat_count++;
							endforeach;
							echo '</ul>';?>
							<?php if( $cat_count == 6 ){ ?>
							<p class="button button-blue link-more-category"><a href="<?php echo home_url('/job_cat'); ?>"><span>Xem tất cả</span></a></p>
							<?php } ?>
							<?php
						endif;
						?>
					</div>
				</div>
				<?php echo sougou_work_scenery_home(); ?>
			</div><!-- /main -->


